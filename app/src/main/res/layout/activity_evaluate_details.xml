<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar" />

    <include layout="@layout/include_divider_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:text="@string/my_assessment_of_the_employer"
                    android:textColor="@color/text_dark_black"
                    android:textSize="@dimen/normal_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:text="@string/comprehensive_assessment"
                    android:textColor="@color/text_dark_black"
                    android:textSize="@dimen/mid_size" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <RatingBar
                        android:id="@+id/rb_first_overall_merit"
                        style="@style/EvaluateRatingBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:stepSize="1" />

                    <TextView
                        android:id="@+id/tv_first_overall_merit_evaluate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@id/rb_first_overall_merit"
                        android:text="好评"
                        android:textColor="@color/text_light_black"
                        android:textSize="@dimen/small_size" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_first_service_evaluate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="40dp"
                        android:text="@string/service_evaluate"
                        android:textColor="@color/text_dark_black"
                        android:textSize="@dimen/normal_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_first_complete_on_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/complete_on_time"
                            android:textColor="@color/text_light_black"
                            android:textSize="@dimen/small_size" />

                        <RatingBar
                            android:id="@+id/rb_first_complete_on_time"
                            style="@style/EvaluateRatingBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:isIndicator="true"
                            android:stepSize="1" />

                        <TextView
                            android:id="@+id/tv_first_complete_on_time_evaluate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="好评"
                            android:textColor="@color/text_light_black"
                            android:textSize="@dimen/small_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_first_work_quality"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/work_quality"
                            android:textColor="@color/text_light_black"
                            android:textSize="@dimen/small_size" />

                        <RatingBar
                            android:id="@+id/rb_first_work_quality"
                            style="@style/EvaluateRatingBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:isIndicator="true"
                            android:stepSize="1" />

                        <TextView
                            android:id="@+id/tv_first_work_quality_evaluate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="好评"
                            android:textColor="@color/text_light_black"
                            android:textSize="@dimen/small_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_first_service_integrity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/service_integrity"
                            android:textColor="@color/text_light_black"
                            android:textSize="@dimen/small_size" />

                        <RatingBar
                            android:id="@+id/rb_first_service_integrity"
                            style="@style/EvaluateRatingBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:isIndicator="true"
                            android:stepSize="1" />

                        <TextView
                            android:id="@+id/tv_first_service_integrity_evaluate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="5dp"
                            android:text="好评"
                            android:textColor="@color/text_light_black"
                            android:textSize="@dimen/small_size" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/evaluation_content"
                    android:textColor="@color/text_dark_black"
                    android:textSize="@dimen/normal_size" />

                <TextView
                    android:id="@+id/tv_first_evaluate_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="19dp"
                    android:textColor="@color/text_dark_gray"
                    android:textSize="@dimen/small_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/my_employer_assessment_of_me"
                    android:textColor="@color/text_dark_black"
                    android:textSize="@dimen/normal_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:text="@string/comprehensive_assessment"
                    android:textColor="@color/text_dark_black"
                    android:textSize="@dimen/mid_size" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <RatingBar
                        android:id="@+id/rb_second_overall_merit"
                        style="@style/EvaluateRatingBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:stepSize="1" />

                    <TextView
                        android:id="@+id/tv_second_overall_merit_evaluate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@id/rb_second_overall_merit"
                        android:text="好评"
                        android:textColor="@color/text_light_black"
                        android:textSize="@dimen/small_size" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_second_service_evaluate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="40dp"
                        android:text="@string/service_evaluate"
                        android:textColor="@color/text_dark_black"
                        android:textSize="@dimen/normal_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_second_complete_on_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/complete_on_time"
                            android:textColor="@color/text_light_black"
                            android:textSize="@dimen/small_size" />

                        <RatingBar
                            android:id="@+id/rb_second_complete_on_time"
                            style="@style/EvaluateRatingBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:isIndicator="true"
                            android:stepSize="1" />

                        <TextView
                            android:id="@+id/tv_second_complete_on_time_evaluate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="好评"
                            android:textColor="@color/text_light_black"
                            android:textSize="@dimen/small_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_second_work_quality"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/work_quality"
                            android:textColor="@color/text_light_black"
                            android:textSize="@dimen/small_size" />

                        <RatingBar
                            android:id="@+id/rb_second_work_quality"
                            style="@style/EvaluateRatingBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:isIndicator="true"
                            android:stepSize="1" />

                        <TextView
                            android:id="@+id/tv_second_work_quality_evaluate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="好评"
                            android:textColor="@color/text_light_black"
                            android:textSize="@dimen/small_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_second_service_integrity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/service_integrity"
                            android:textColor="@color/text_light_black"
                            android:textSize="@dimen/small_size" />

                        <RatingBar
                            android:id="@+id/rb_second_service_integrity"
                            style="@style/EvaluateRatingBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:isIndicator="true"
                            android:stepSize="1" />

                        <TextView
                            android:id="@+id/tv_second_service_integrity_evaluate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="好评"
                            android:textColor="@color/text_light_black"
                            android:textSize="@dimen/small_size" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/evaluation_content"
                    android:textColor="@color/text_dark_black"
                    android:textSize="@dimen/normal_size" />

                <TextView
                    android:id="@+id/tv_second_evaluate_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="19dp"
                    android:textColor="@color/text_dark_gray"
                    android:textSize="@dimen/small_size" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>