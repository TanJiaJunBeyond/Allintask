<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/common_background_color" />

    <LinearLayout
        android:id="@+id/ll_all_service_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:id="@+id/ll_service_city"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_star"
                android:drawablePadding="5dp"
                android:text="@string/service_city"
                android:textColor="@color/text_dark_black"
                android:textSize="@dimen/small_size" />

            <TextView
                android:id="@+id/tv_service_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="right"
                android:text="@string/please_select"
                android:textColor="@color/text_light_black"
                android:textSize="@dimen/small_size" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/common_background_color" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_service_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        android:drawablePadding="5dp"
        android:text="@string/voice_introduction"
        android:textColor="@color/text_dark_black"
        android:textSize="@dimen/small_size" />

    <TextView
        android:id="@+id/tv_voice_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:text="@string/voice_introduction_content"
        android:textColor="@color/text_light_black"
        android:textSize="@dimen/small_size" />

    <LinearLayout
        android:id="@+id/ll_voice_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_hold_to_talk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/ic_hold_to_talk"
            android:text="@string/hold_to_talk"
            android:textSize="@dimen/small_size" />

        <LinearLayout
            android:id="@+id/ll_voice_introduce_demo_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_voice_introduce_demo_subclass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/voice_demo"
                    android:textColor="@color/text_light_black"
                    android:textSize="@dimen/small_size" />

                <LinearLayout
                    android:id="@+id/ll_voice_introduce_demo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/ic_publish_service_voice_demo_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_voice_demo"
                        android:layout_width="13dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/anim_publish_service_voice_demo" />

                    <TextView
                        android:id="@+id/tv_voice_demo_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="0''"
                        android:textColor="@color/white"
                        android:textSize="@dimen/small_size" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_voice_demo_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="@string/voice_loading"
                android:textColor="@color/text_dark_black"
                android:textSize="@dimen/small_size"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_voice_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/ic_publish_service_voice_demo_background"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_voice"
                android:layout_width="13dp"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/anim_publish_service_voice_demo" />

            <TextView
                android:id="@+id/tv_voice_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="0''"
                android:textColor="@color/white"
                android:textSize="@dimen/small_size" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="@string/delete"
            android:textColor="@color/text_red"
            android:textSize="@dimen/small_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_voice_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="16dp"
        android:text="@string/voice_loading"
        android:textColor="@color/text_dark_black"
        android:textSize="@dimen/small_size"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/common_background_color" />

    <TextView
        android:id="@+id/tv_my_advantage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        android:drawableLeft="@mipmap/ic_star"
        android:drawablePadding="5dp"
        android:text="@string/my_advantage"
        android:textColor="@color/text_dark_black"
        android:textSize="@dimen/small_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/et_my_merit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:gravity="left"
            android:hint="@string/my_advantage_hint"
            android:maxLength="100"
            android:textColor="@color/text_dark_black"
            android:textSize="@dimen/small_size" />

        <TextView
            android:id="@+id/tv_my_merit_number_of_words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="0/100"
            android:textColor="@color/text_light_black"
            android:textSize="@dimen/small_size" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/common_background_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/tv_service_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_star"
            android:drawablePadding="5dp"
            android:text="@string/service_introduction"
            android:textColor="@color/text_dark_black"
            android:textSize="@dimen/small_size" />

        <TextView
            android:id="@+id/tv_see_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/see_example"
            android:textColor="@color/theme_orange"
            android:textSize="@dimen/small_size" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/et_service_introduction"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@null"
            android:gravity="left"
            android:hint="@string/service_introduction_hint"
            android:maxLength="500"
            android:textColor="@color/text_dark_black"
            android:textSize="@dimen/small_size" />

        <TextView
            android:id="@+id/tv_service_introduction_number_of_words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="0/500"
            android:textColor="@color/text_light_black"
            android:textSize="@dimen/small_size" />

    </LinearLayout>

</LinearLayout>