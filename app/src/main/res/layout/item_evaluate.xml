<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="16dp">

    <com.allintask.lingdao.widget.CircleImageView
        android:id="@+id/civ_head_portrait"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@id/civ_head_portrait"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark_black"
            android:textSize="@dimen/small_size" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_dark_gray"
            android:textSize="@dimen/min_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_overall_merit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_first_star"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@mipmap/ic_unselected_small_star" />

                <ImageView
                    android:id="@+id/iv_second_star"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="2dp"
                    android:background="@mipmap/ic_unselected_small_star" />

                <ImageView
                    android:id="@+id/iv_third_star"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="2dp"
                    android:background="@mipmap/ic_unselected_small_star" />

                <ImageView
                    android:id="@+id/iv_fourth_star"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="2dp"
                    android:background="@mipmap/ic_unselected_small_star" />

                <ImageView
                    android:id="@+id/iv_fifth_star"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="2dp"
                    android:background="@mipmap/ic_unselected_small_star" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="right"
                android:textColor="@color/text_dark_gray"
                android:textSize="@dimen/min_size" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>