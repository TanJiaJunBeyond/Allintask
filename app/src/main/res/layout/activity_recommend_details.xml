<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <include layout="@layout/include_divider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="48dp"
            android:paddingRight="48dp">

            <RelativeLayout
                android:id="@+id/rl_chat"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:background="@drawable/shape_recommend_details_button_orange_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@mipmap/ic_chat"
                    android:drawablePadding="5dp"
                    android:text="@string/chat"
                    android:textColor="@color/white"
                    android:textSize="@dimen/min_size" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_subscribe"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_marginLeft="35dp"
                android:layout_weight="1"
                android:background="@drawable/shape_recommend_details_button_orange_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@mipmap/ic_subscribe"
                    android:drawablePadding="5dp"
                    android:text="@string/employ_me"
                    android:textColor="@color/white"
                    android:textSize="@dimen/min_size" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_like"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_marginLeft="35dp"
                android:layout_weight="1"
                android:background="@drawable/shape_recommend_details_button_white_background"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_not_like" />

                <TextView
                    android:id="@+id/tv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="0"
                    android:textColor="@color/text_dark_black"
                    android:textSize="@dimen/min_size" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_bottom"
        android:orientation="vertical">

        <include layout="@layout/include_toolbar" />

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_behavior="com.allintask.lingdao.utils.FlingBehavior"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:layout_scrollFlags="scroll">

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/shape_recommend_tag_background"
                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="3dp"
                        android:text="1小时前来过"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="@dimen/text_size_10sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="92dp"
                            android:layout_height="92dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="24dp">

                            <com.allintask.lingdao.widget.CircleImageView
                                android:id="@+id/civ_head_portrait"
                                android:layout_width="92dp"
                                android:layout_height="92dp"
                                android:src="@mipmap/ic_default_avatar"
                                android:transitionName="head" />

                            <ImageView
                                android:id="@+id/iv_specialist_recommend"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginBottom="9dp"
                                android:background="@mipmap/ic_specialist_recommend"
                                android:visibility="gone"
                                tools:visibility="visible" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="5dp"
                                android:textColor="@color/text_light_black"
                                android:textSize="@dimen/small_size" />

                            <ImageView
                                android:id="@+id/iv_gender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:src="@mipmap/ic_male" />

                            <TextView
                                android:id="@+id/tv_age"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:textColor="@color/text_light_black"
                                android:textSize="@dimen/small_size"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tv_work_experience_year"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:textColor="@color/text_light_black"
                                android:textSize="@dimen/small_size" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="30dp"
                            android:layout_marginTop="12dp">

                            <TextView
                                android:id="@+id/tv_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_dark_gray"
                                android:textSize="@dimen/small_size" />

                            <TextView
                                android:id="@+id/tv_distance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:drawableLeft="@mipmap/ic_location"
                                android:drawablePadding="5dp"
                                android:textColor="@color/text_dark_gray"
                                android:textSize="@dimen/small_size" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_personal_album"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:background="@color/common_tag_background_color" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:id="@+id/iv_arrow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentRight="true"
                                    android:paddingRight="16dp"
                                    android:src="@mipmap/right_arrow" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_toLeftOf="@id/iv_arrow"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="16dp"
                                        android:text="个人相册" />

                                    <LinearLayout
                                        android:id="@+id/ll_personal_album_details"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="12dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/iv_first_personal_photo"
                                            android:layout_width="58dp"
                                            android:layout_height="58dp"
                                            android:layout_marginRight="5dp"
                                            android:scaleType="centerCrop"
                                            android:src="@mipmap/ic_default" />

                                        <ImageView
                                            android:id="@+id/iv_second_personal_photo"
                                            android:layout_width="58dp"
                                            android:layout_height="58dp"
                                            android:layout_marginLeft="4dp"
                                            android:layout_marginRight="5dp"
                                            android:scaleType="centerCrop"
                                            android:src="@mipmap/ic_default" />

                                        <ImageView
                                            android:id="@+id/iv_third_personal_photo"
                                            android:layout_width="58dp"
                                            android:layout_height="58dp"
                                            android:layout_marginLeft="4dp"
                                            android:layout_marginRight="5dp"
                                            android:scaleType="centerCrop"
                                            android:src="@mipmap/ic_default" />

                                        <ImageView
                                            android:id="@+id/iv_fourth_personal_photo"
                                            android:layout_width="58dp"
                                            android:layout_height="58dp"
                                            android:layout_marginLeft="4dp"
                                            android:layout_marginRight="5dp"
                                            android:scaleType="centerCrop"
                                            android:src="@mipmap/ic_default" />

                                    </LinearLayout>

                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_seeing"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/common_tag_background_color"
                            android:gravity="center_vertical"
                            android:padding="10dp"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <com.allintask.lingdao.widget.CircleImageView
                                android:id="@+id/civ_first_seeing"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="5dp"
                                android:src="@mipmap/ic_default_avatar" />

                            <com.allintask.lingdao.widget.CircleImageView
                                android:id="@+id/civ_second_seeing"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="5dp"
                                android:src="@mipmap/ic_default_avatar" />

                            <com.allintask.lingdao.widget.CircleImageView
                                android:id="@+id/civ_third_seeing"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="5dp"
                                android:src="@mipmap/ic_default_avatar" />

                            <com.allintask.lingdao.widget.CircleImageView
                                android:id="@+id/civ_fourth_seeing"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="5dp"
                                android:src="@mipmap/ic_default_avatar" />

                            <com.allintask.lingdao.widget.CircleImageView
                                android:id="@+id/civ_fifth_seeing"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="5dp"
                                android:src="@mipmap/ic_default_avatar" />

                            <com.allintask.lingdao.widget.CircleImageView
                                android:id="@+id/civ_sixth_seeing"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="5dp"
                                android:src="@mipmap/ic_default_avatar" />

                            <TextView
                                android:id="@+id/tv_number_of_people_seeing"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:drawableLeft="@mipmap/ic_see"
                                android:drawablePadding="5dp"
                                android:text="0人"
                                android:textColor="@color/text_light_black"
                                android:textSize="@dimen/min_size" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_my_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text="我的服务"
                        android:textColor="@color/text_dark_black"
                        android:textSize="@dimen/small_size" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_my_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

                </LinearLayout>

            </android.support.design.widget.AppBarLayout>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_skills_album"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="10dp"
                            android:drawableLeft="@mipmap/ic_skills_photo_album"
                            android:drawablePadding="5dp"
                            android:text="技能相册"
                            android:textColor="@color/text_dark_black"
                            android:textSize="@dimen/small_size" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginLeft="41dp">

                            <ImageView
                                android:id="@+id/iv_skill_album_arrow"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:paddingRight="16dp"
                                android:src="@mipmap/right_arrow" />

                            <LinearLayout
                                android:id="@+id/ll_skills_album_details"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toLeftOf="@id/iv_skill_album_arrow"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_first_skill_photo"
                                    android:layout_width="58dp"
                                    android:layout_height="58dp"
                                    android:layout_marginRight="5dp"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/ic_launcher" />

                                <ImageView
                                    android:id="@+id/iv_second_skill_photo"
                                    android:layout_width="58dp"
                                    android:layout_height="58dp"
                                    android:layout_marginRight="5dp"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/ic_launcher" />

                                <ImageView
                                    android:id="@+id/iv_third_skill_photo"
                                    android:layout_width="58dp"
                                    android:layout_height="58dp"
                                    android:layout_marginRight="5dp"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/ic_launcher" />

                                <ImageView
                                    android:id="@+id/iv_fourth_skill_photo"
                                    android:layout_width="58dp"
                                    android:layout_height="58dp"
                                    android:layout_marginRight="5dp"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/ic_launcher" />

                            </LinearLayout>

                        </RelativeLayout>

                        <include layout="@layout/include_divider_line" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_voice_introduce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@mipmap/ic_voice_introduce"
                                android:drawablePadding="5dp"
                                android:text="@string/voice_introduction"
                                android:textColor="@color/text_dark_black"
                                android:textSize="@dimen/small_size" />

                            <LinearLayout
                                android:id="@+id/ll_voice_demo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@mipmap/ic_publish_service_voice_demo_background"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/iv_voice_demo"
                                        android:layout_width="13dp"
                                        android:layout_height="16dp"
                                        android:layout_marginLeft="10dp"
                                        android:background="@drawable/anim_publish_service_voice_demo" />

                                    <TextView
                                        android:id="@+id/tv_voice_demo_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:text="0''"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/small_size" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <include layout="@layout/include_divider_line" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_good_at_skills"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="10dp"
                            android:drawableLeft="@mipmap/ic_good_at_skills"
                            android:drawablePadding="5dp"
                            android:text="擅长技能"
                            android:textColor="@color/text_dark_black"
                            android:textSize="@dimen/small_size" />

                        <TextView
                            android:id="@+id/tv_good_at_skills"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="10dp"
                            android:lineSpacingExtra="10dp"
                            android:textColor="@color/text_light_black"
                            android:textSize="@dimen/min_size" />

                        <include layout="@layout/include_divider_line" />

                    </LinearLayout>

                    <com.allintask.lingdao.widget.CommonRecyclerView
                        android:id="@+id/crv_service_way_price_unit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"></com.allintask.lingdao.widget.CommonRecyclerView>

                    <include layout="@layout/include_divider_line" />

                    <LinearLayout
                        android:id="@+id/ll_service_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@mipmap/ic_service_city"
                                android:drawablePadding="5dp"
                                android:text="@string/service_city"
                                android:textColor="@color/text_dark_black"
                                android:textSize="@dimen/small_size" />

                            <TextView
                                android:id="@+id/tv_service_city"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:gravity="right"
                                android:lineSpacingExtra="13dp"
                                android:textColor="@color/text_light_black"
                                android:textSize="@dimen/small_size" />

                        </LinearLayout>

                        <include layout="@layout/include_divider_line" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_service_introduction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="10dp"
                            android:drawableLeft="@mipmap/ic_service_introduce"
                            android:drawablePadding="5dp"
                            android:text="@string/recommend_service_introduction"
                            android:textColor="@color/text_dark_black"
                            android:textSize="@dimen/small_size" />

                        <TextView
                            android:id="@+id/tv_service_introduction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="10dp"
                            android:lineSpacingExtra="13dp"
                            android:textColor="@color/text_light_black"
                            android:textSize="@dimen/small_size" />

                        <include layout="@layout/include_divider_line" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_my_advantage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="10dp"
                            android:drawableLeft="@mipmap/ic_my_advantage"
                            android:drawablePadding="5dp"
                            android:text="@string/recommend_my_advantage"
                            android:textColor="@color/text_dark_black"
                            android:textSize="@dimen/small_size" />

                        <TextView
                            android:id="@+id/tv_my_advantage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="10dp"
                            android:lineSpacingExtra="13dp"
                            android:textColor="@color/text_light_black"
                            android:textSize="@dimen/small_size" />

                        <include layout="@layout/include_divider_line" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_educational_experience"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:id="@+id/tv_educational_experience"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="10dp"
