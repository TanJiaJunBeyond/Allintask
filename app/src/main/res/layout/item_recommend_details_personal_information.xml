<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_second_content"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:ellipsize="middle"
            android:gravity="right"
            android:maxEms="15"
            android:singleLine="true"
            android:textColor="@color/text_light_black"
            android:textSize="@dimen/small_size" />

        <TextView
            android:id="@+id/tv_first_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_second_content"
            android:ellipsize="middle"
            android:maxEms="15"
            android:singleLine="true"
            android:textColor="@color/text_light_black"
            android:textSize="@dimen/small_size" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_third_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_light_black"
            android:textSize="@dimen/small_size" />

        <TextView
            android:id="@+id/tv_fourth_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="right"
            android:textColor="@color/text_light_black"
            android:textSize="@dimen/small_size" />

    </LinearLayout>

    <include layout="@layout/include_divider_line" />

</LinearLayout>