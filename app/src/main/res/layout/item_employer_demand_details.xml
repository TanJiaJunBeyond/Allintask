<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_employer_demand_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_new"
            android:layout_width="27dp"
            android:layout_height="32dp"
            android:background="@mipmap/ic_new"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp">

            <com.allintask.lingdao.widget.CircleImageView
                android:id="@+id/civ_head_portrait"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:id="@+id/ll_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_toRightOf="@id/civ_head_portrait"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:text="姓名"
                    android:textColor="@color/text_light_black"
                    android:textSize="@dimen/small_size" />

                <ImageView
                    android:id="@+id/iv_gender"
                    android:layout_width="11dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="5dp"
                    android:background="@mipmap/ic_male" />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:text="24岁"
                    android:textColor="@color/text_light_black"
                    android:textSize="@dimen/small_size" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_user_name"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/civ_head_portrait"
                android:background="@drawable/shape_recommend_tag_background"
                android:padding="5dp"
                android:text="1小时前来过"
                android:textColor="@color/text_dark_gray"
                android:textSize="@dimen/min_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:background="@mipmap/ic_arrow_right" />

        </RelativeLayout>

    </RelativeLayout>

    <include
        layout="@layout/include_divider_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_height"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_status"
            android:textColor="@color/text_dark_black"
            android:textSize="@dimen/small_size" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/wait_finish"
            android:textColor="@color/theme_orange"
            android:textSize="@dimen/small_size" />

    </LinearLayout>

    <include
        layout="@layout/include_divider_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_height"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:id="@+id/ll_bid_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bid_price"
                android:textColor="@color/text_dark_black"
                android:textSize="@dimen/small_size" />

            <TextView
                android:id="@+id/tv_bid_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/text_dark_gray"
                android:textSize="@dimen/small_size" />

        </LinearLayout>

        <include
            layout="@layout/include_divider_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line_height"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_advantage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/he_or_she_advantage"
                android:textColor="@color/text_dark_black"
                android:textSize="@dimen/small_size" />

            <TextView
                android:id="@+id/tv_advantage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/text_dark_gray"
                android:textSize="@dimen/small_size" />

        </LinearLayout>

        <include
            layout="@layout/include_divider_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line_height"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_order_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_number"
                android:textColor="@color/text_dark_black"
                android:textSize="@dimen/small_size" />

            <TextView
                android:id="@+id/tv_order_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/text_dark_gray"
                android:textSize="@dimen/small_size" />

        </LinearLayout>

        <include
            layout="@layout/include_divider_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line_height"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bid_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bid_time"
                android:textColor="@color/text_dark_black"
                android:textSize="@dimen/small_size" />

            <TextView
                android:id="@+id/tv_bid_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="2017/12/12 12:12"
                android:textColor="@color/text_dark_gray"
                android:textSize="@dimen/small_size" />

        </LinearLayout>

        <include
            layout="@layout/include_divider_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line_height"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_work_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/work_time"
                android:textColor="@color/text_dark_black"
                android:textSize="@dimen/small_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_work_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017/12/12 12:12"
                    android:textColor="@color/text_dark_gray"
                    android:textSize="@dimen/small_size" />

                <Button
                    android:id="@+id/btn_delay_day"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="80dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/shape_recommend_details_button_white_background"
                    android:text="延长7天"
                    android:textColor="@color/theme_orange" />

                <TextView
                    android:id="@+id/tv_delay_completed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/delay_completed"
                    android:textColor="@color/red"
                    android:textSize="@dimen/small_size" />

            </LinearLayout>

        </LinearLayout>

        <include
            layout="@layout/include_divider_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line_height"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_payment_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment_price"
                android:textColor="@color/text_dark_black"
                android:textSize="@dimen/small_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_payment_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥5000"
                    android:textColor="@color/text_dark_gray"
                    android:textSize="@dimen/small_size" />

                <Button
                    android:id="@+id/btn_apply_for_refund"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="80dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/shape_recommend_details_button_white_background"
                    android:text="@string/apply_for_refund"
                    android:textColor="@color/theme_orange" />

            </LinearLayout>

        </LinearLayout>

        <include
            layout="@layout/include_divider_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line_height"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_arbitration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/text_red"
                android:textSize="@dimen/small_size" />

            <Button
                android:id="@+id/btn_apply_for_arbitrament"
                style="?android:borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="27dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_recommend_details_button_white_background"
                android:text="@string/apply_for_arbitrament"
                android:textColor="@color/theme_orange" />

        </RelativeLayout>

        <include
            layout="@layout/include_divider_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line_height"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:text="距离工作结束还有0天0小时"
        android:textColor="@color/text_dark_black"
        android:textSize="@dimen/small_size" />

    <include
        layout="@layout/include_divider_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_height"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_first"
            android:layout_width="75dp"
            android:layout_height="28dp"
            android:background="@drawable/shape_recommend_details_button_orange_background"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_chat" />

            <TextView
                android:id="@+id/tv_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/chat"
                android:textColor="@color/white"
                android:textSize="@dimen/min_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_second"
            android:layout_width="75dp"
            android:layout_height="28dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/shape_recommend_details_button_orange_background"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_confirm_start" />

            <TextView
                android:id="@+id/tv_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/confirm_start"
                android:textColor="@color/white"
                android:textSize="@dimen/min_size" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>