<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="14dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark_black"
            android:textSize="@dimen/normal_size" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="right"
            android:textColor="@color/theme_orange"
            android:textSize="@dimen/small_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_service_mode_and_price_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="14dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/service_pictures"
            android:textColor="@color/text_dark_black"
            android:textSize="@dimen/small_size" />

        <TextView
            android:id="@+id/tv_service_pictures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="right"
            android:text="0å¼ "
            android:textColor="@color/text_dark_black"
            android:textSize="@dimen/small_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="14dp"
        android:textColor="@color/text_dark_black"
        android:textSize="@dimen/small_size" />

    <include
        layout="@layout/include_divider_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_height"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_delete"
            style="?android:borderlessButtonStyle"
            android:layout_width="63dp"
            android:layout_height="27dp"
            android:background="@drawable/shape_recommend_details_button_white_background"
            android:text="@string/delete"
            android:textColor="@color/theme_orange"
            android:textSize="@dimen/small_size" />

        <Button
            android:id="@+id/btn_online"
            style="?android:borderlessButtonStyle"
            android:layout_width="63dp"
            android:layout_height="27dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/shape_recommend_details_button_white_background"
            android:text="@string/online"
            android:textColor="@color/theme_orange"
            android:textSize="@dimen/small_size" />

        <Button
            android:id="@+id/btn_offline"
            style="?android:borderlessButtonStyle"
            android:layout_width="63dp"
            android:layout_height="27dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/shape_recommend_details_button_white_background"
            android:text="@string/offline"
            android:textColor="@color/theme_orange"
            android:textSize="@dimen/small_size" />

        <Button
            android:id="@+id/btn_compile"
            style="?android:borderlessButtonStyle"
            android:layout_width="63dp"
            android:layout_height="27dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/shape_recommend_details_button_white_background"
            android:text="@string/compile"
            android:textColor="@color/theme_orange"
            android:textSize="@dimen/small_size" />

    </LinearLayout>

</LinearLayout>