<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_search_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/popup_window_background_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:background="@color/popup_window_search_status_background_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_service"
            android:layout_width="100dp"
            android:layout_height="37dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            android:background="@color/theme_orange"
            android:gravity="center"
            android:text="@string/service"
            android:textColor="@color/white"
            android:textSize="@dimen/small_size" />

        <TextView
            android:id="@+id/tv_demand"
            android:layout_width="100dp"
            android:layout_height="37dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:background="@color/search_status_unselected_background_color"
            android:gravity="center"
            android:text="@string/demand"
            android:textColor="@color/text_dark_black"
            android:textSize="@dimen/small_size" />

    </LinearLayout>

</LinearLayout>